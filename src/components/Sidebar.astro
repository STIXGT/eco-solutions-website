const links = [
  { href: '/', text: 'Home', icon: homeIcon },
  { href: '/products', text: 'Products', icon: productsIcon },
  { href: '/testimonials', text: 'Testimonials', icon: testimonialsIcon },
  { href: '/contact', text: 'Contact', icon: contactIcon },

  ];
