---
import MainLayout from '@layouts/MainLayout.astro'
import ContentCard from '@components/ContentCard.astro'
import image1 from '@assets/images/testimonials/image1.png'
import image2 from '@assets/images/testimonials/image2.png'
import image3 from '@assets/images/testimonials/image3.png'
import TestimonialClient from '@/components/TestimonialClient.astro'
import cliente1 from '@assets/images/testimonials/cliente1.png'
import cliente2 from '@assets/images/testimonials/cliente2.png'
import cliente3 from '@assets/images/testimonials/cliente3.png'

const testimonials = [
    {
        id: 1,
        title: "Building dreams, Creating visions",
        description: "EcoSolutions transformed our vision in reality. Your commitment with the sustainability and quality is exceptional.",
        image: image1.src
    },
    {
        id: 2,
        title: "Spaces that inspire, Quality that lasts",
        description: "The attention to detail and the professionalism of EcoSolutions is surpassed our expectations. We are enchanted with our new home.",
        image: image2.src
    },
    {
        id: 3,
        title: "Innovated in all details, Homes for the future",
        description: "EcoSolutions not only builded a one house, but rather a home with full innovation and intelligence design. Your focus in the sostainability is admirable.",
        image: image3.src
    }
];

const clientTestimonials = [
    {
        name: "Sofía García",
        date: "March 15, 2023",
        numberOfStars: 5,
        feedback: '"EcoSolutions exceeded our expectations at every step of the process. From design to construction, their team demonstrated professionalism and meticulous attention to detail. We are delighted with the end result: a home that is not only beautiful but also sustainable and efficient."',
        image: cliente1.src
    },
    {
        name: "Carlos López",
        date: "July 22, 2023",
        numberOfStars: 4,
        feedback: '"The experience with EcoSolutions was exceptional. Their focus on communication and transparency kept us informed and confident throughout the project. The result is a home that perfectly reflects our vision, built with high-quality materials and innovative design."',
        image: cliente2.src
    },
    {
        name: "Ana Martínez",
        date: "November 5, 2023",
        numberOfStars: 5,
        feedback: '"EcoSolutions turned our dream into reality. Their commitment to sustainability and innovation is evident in every detail of our new home. The team was professional, attentive, and always willing to exceed our expectations. We recommend EcoSolutions without reservation."',
        image: cliente3.src
    }
];
---


<MainLayout title="Testimonials Page">
<section class="p-5">
    <h1 class="text-2xl font-semibold text-left">Testimonials</h1>
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-5 my-5 place-content-center">
        {
            testimonials.map(({title, description, image}) => (
                <ContentCard {title} {description} {image} />
            ))
        }
    </section>
    <section>
        <h2 class="text-xl font-semibold">Our Clients Talk</h2>
        <div class="grid grid-rows-3 gap-7 my-5">
            {
                clientTestimonials.map(({ name, date, numberOfStars, feedback, image }) => (
                    <TestimonialClient clientName={name} date={date} numberOfStars={numberOfStars} feedback={feedback} image={image} />
                ))
            }
        </div>
    </section>
</section>
</MainLayout>