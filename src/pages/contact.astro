---
import InfoContact from '@/components/InfoContact.astro';
import MainLayout from '../layouts/MainLayout.astro'
import iconInfo1 from '@assets/icons/icon1.svg'
import iconInfo2 from '@assets/icons/icon2.svg'
import iconInfo3 from '@assets/icons/icon3.svg'
import InputComponent from '@/components/InputComponent.astro';

const contactInfo = [
    {
        typeInfo: "Email",
        info: "contact@eco-city.com",
        icon: iconInfo1.src
    },
    {
        typeInfo: "Phone",
        info: "+1 (234) 567-8901",
        icon: iconInfo2.src
    },
    {
        typeInfo: "Direction",
        info: "123 Eco Street, Green City, EC 12345",
        icon: iconInfo3.src
    }
];
---


<MainLayout title="Contact Page">
<section class="min-h-screen grid grid-rows-[1fr,1fr] p-5">
    <section class=" sm:w-1/2">
        <h1 class="text-3xl font-semibold">Contact Us</h1>
        <form class="flex flex-col gap-4 mt-5">
            <InputComponent type="text" placeholder="Name" />

            <InputComponent type="email" placeholder="Email" />

            <InputComponent type="text" placeholder="Subject" />

            <textarea class="p-3 rounded-md bg-[#F5F0F0] text-[#876363] focus:outline-none focus:ring focus:ring-blue-600 shadow resize-none" name="message" id="" 
            placeholder="Message" rows="4"></textarea>
            <div class="place-self-end">
                <button class="px-4 py-2 font-semibold text-white rounded-md bg-red-500 hover:bg-red-600 active:bg-red-700 cursor-pointer" type="submit">Send</button>
            </div>
        </form>
    </section>
    <section>
        <h3 class="text-xl font-semibold">Contact Information</h3>
        <div class="grid gap-4 mt-3">
            {
                contactInfo.map(({ typeInfo, info, icon }) => (
                    <InfoContact {icon} {typeInfo} {info}/>
                ))
            }
        </div>
    </section>
</section>
</MainLayout>
