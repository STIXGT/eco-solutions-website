<MainLayout title="Home Page">
    <section class="grid grid-rows-[2fr,auto] p-5 gap-5">
        <section class="bg-hero p-5">
                <div class="text-left max-w-3xl space-y-5">
                    <h1 class="text-2xl font-bold md:text-5xl">Innovative Solutions to a Sustainable Future</h1>
                    <p class="text-lg font-mono md:text-lg">Discover how EcoSolutions is leading the road to a more green world with our innovative and sustainable solutions.</p>
                    <div class="flex justify-center items-center">
                        <a class="bg-red-500 py-2 px-3 text-lg rounded-lg font-semibold hover:bg-red-600 active:bg-red-500 md:py-3 md:px-5" href="/products">Explore products</a>
                    </div>
                </div>
        </section>
        <section>
            <h1 class="text-3xl font-bold text-center">Our featured products</h1>
            <section class="grid grid-cols-1 gap-5 mt-5 md:grid-cols-3">
                {bestProducts.map(({name, description, image}: any)=> (
                    <div class="grid place-items-center gap-2">
                            <Image src={image} alt={name} width={250} height={100} />
                            <div class="order-first md:order-2 text-balance ">
                                <h2 class="font-semibold text-xl text-center">{name}</h2>
                                <p class="text-md font-light text-red-900 text-center">{description}</p>
                            </div>
                    </div>
                )
                )}
            </section>
        </section>
    </section>
